<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:padding="@dimen/d10">

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/house_head"
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d60"
        android:scaleType="centerCrop"
        android:src="@drawable/default_png"
        app:siShape="@drawable/shape_rounded_rectangle4"
        app:siSquare="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/d8"
        android:layout_toRightOf="@id/house_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/house_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="标题"
            android:textColor="#111111"
            android:textSize="@dimen/TextSize_5" />

        <TextView
            android:id="@+id/house_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="地址"
            android:textColor="#999"
            android:textSize="@dimen/TextSize_6" />

        <TextView
            android:id="@+id/house_describe"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="描述"
            android:textColor="#999"
            android:textSize="@dimen/TextSize_6" />
    </LinearLayout>


</RelativeLayout>

